<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Registro_de_Corredores.ViewModels"
             x:Class="Registro_de_Corredores.View.ViewValiadrDistancia">

    <ContentPage.BindingContext>
        <local:ViewModelsValiadrDistancia></local:ViewModelsValiadrDistancia>
    </ContentPage.BindingContext>

<ContentPage.Content>
        <StackLayout>

            <Label Text="Ingrese los KmACorrer" FontSize="50" />
            <Entry Text="{Binding Vdistancia}" Keyboard="Numeric" ></Entry>

            <Button Command="{Binding Vdistancia}" Text="Crear Circulo" />

            <Label Text="{Binding Resultado}" FontSize="25"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>